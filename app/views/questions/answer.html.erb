<div class="container">
  <h1 class="mt-3">🤡 Stupid Coaching</h1>

  <div id="card-question" class="container p-3 my-3 bg-pink-subtle">
    <h4>🧐 Your question:</h4>
    <p>"<%= @question %>"</p>
  </div>

  <div id="card-answer" class="container p-3 my-3 bg-success-subtle">
    <h4>😎 Coach's answer:</h4>
    <p>"<%= @answer %>"</p>
  </div>

  <div class="container">
    <%= link_to('Ask a new question', ask_path) %>
  </div>
</div>
